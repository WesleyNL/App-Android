<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".forum.discussao.ForumDiscussaoActivity" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo da Discussao"
        android:id="@+id/lblTituloDiscussao"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_above="@+id/lblDescricaoDiscussao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:text="Descrição da Discussão"
        android:id="@+id/lblDescricaoDiscussao"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/lblResponder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:id="@+id/lblResponder"
        android:layout_above="@+id/txtResposta"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResposta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnEnviarResposta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviarResposta"
        android:layout_alignTop="@+id/txtResposta"
        android:layout_alignParentEnd="true" />

</RelativeLayout>