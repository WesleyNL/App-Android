<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <TextView
        android:id="@+id/lblNomeIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgPerfil"
        android:layout_marginTop="10sp"
        android:text="Nome, Idade"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lblIdiomaNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblNomeIdade"
        android:layout_marginTop="10sp"
        android:text="Idioma - NÃ­vel"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblIdiomaNivel"
        android:layout_marginTop="10sp"
        android:text="Status"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnAbrirPerfil"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblStatus"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Abrir Perfil no Facebook"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/btnloginshape" />

</RelativeLayout>
