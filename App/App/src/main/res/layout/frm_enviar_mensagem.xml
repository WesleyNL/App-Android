<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:id="@+id/lblResponder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 250"
        android:id="@+id/lblContResposta"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResposta"
        android:layout_below="@id/lblResponder"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnEnviarResposta"
        android:maxLength="250"
        android:maxLines="5"
        android:hint="Digite sua mensagem aqui..."
        android:textColor="#414040" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviarResposta"
        android:background="@mipmap/ic_enviar"
        android:layout_below="@+id/lblResponder"
        android:layout_alignParentEnd="true"
        android:onClick="enviar" />

</RelativeLayout>