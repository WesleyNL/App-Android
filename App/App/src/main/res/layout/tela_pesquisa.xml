<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".pesquisa.PesquisaActivity" >

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmbIdiomaProcurar"
        android:spinnerMode="dropdown"
        android:minWidth="10dp"
        android:layout_alignTop="@+id/lblIdioma"
        android:layout_alignStart="@+id/cmbFluenciaProcurar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Idioma:"
        android:id="@+id/lblIdioma"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fluência:"
        android:id="@+id/lblFluencia"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/cmbIdiomaProcurar" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmbFluenciaProcurar"
        android:spinnerMode="dropdown"
        android:layout_toEndOf="@+id/lblFluencia"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procurar"
        android:id="@+id/btnProcurar"
        android:onClick="procurar"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skrDistancia"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/btnProcurar"
        android:layout_alignStart="@+id/btnProcurar"
        android:padding="0dp"
        android:progressTint="#00d4ff"
        android:secondaryProgressTint="#00bbff"
        android:thumbTint="#10c3d3"
        android:max="100"
        android:layout_alignEnd="@+id/cmbFluenciaProcurar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distância"
        android:id="@+id/lblDistancia"
        android:layout_above="@+id/skrDistancia"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lblDistanciaSelecionada"
        android:layout_above="@+id/btnProcurar"
        android:layout_alignStart="@+id/btnProcurar"
        android:text="0"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp" />

</RelativeLayout>